{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "_/*": ["src/*"],
      "_public/*": ["public/*"],
      "_main/*": ["src/main/*"],
      "_models/*": ["src/models/*"],
      "_preload/*": ["src/preload/*"],
      "_renderer/*": ["src/renderer/*"],
      "_types/*": ["src/types/*"],
      "_utils/*": ["src/utils/*"],
      "_tests/*": ["tests/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "target": "esnext"
  },
  "include": ["src/**/*", "tests/**/*"]
}
