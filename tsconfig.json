{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "baseUrl": "/",
        "paths": {
            "~": ["*"],
            "public*": ["public/"],
            "actions*": ["src/actions/"],
            "main*": ["src/main/"],
            "models*": ["src/models/"],
            "reducers*": ["src/reducers/"],
            "renderer*": ["src/renderer/"],
            "utils*": ["src/utils"]
        },
        "module": "ESNext",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "target": "es2017"
    },
    "exclude": ["node_modules"]
}