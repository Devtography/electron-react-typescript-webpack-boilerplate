{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "baseUrl": "/",
        "paths": {
            "~": ["*"],
            "public": ["public/"],
            "actions": ["actions/"],
            "main": ["main/"],
            "reducers": ["reducers/"],
            "renderer": ["renderer/"],
            "utils": ["utils"]
        },
        "module": "ESNext",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "target": "es2017"
    },
    "exclude": ["node_modules"]
}