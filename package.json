{
  "name": "electron-react-typescript-webpack-boilerplate",
  "version": "1.1.0",
  "description": "Pre-configured boilerplate for Electron + React + TypeScript",
  "main": "./dist/main.bundle.js",
  "scripts": {
    "start": "electron ./dist/main.bundle.js",
    "dev": "rimraf dist && webpack --watch --config ./webpack.dev.js --progress --colors",
    "prod": "rimraf dist && webpack --config ./webpack.prod.js --progress --colors",
    "test": "mocha -r ts-node/register -r tsconfig-paths/register \"test/**/*.ts\""
  },
  "author": "Wing Chau",
  "license": "MIT",
  "dependencies": {
    "@types/react": "^16.7.18",
    "@types/react-dom": "^16.0.11",
    "react": "^16.7.0",
    "react-dom": "^16.7.0"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.5",
    "@types/react-router": "^4.4.3",
    "@types/react-router-dom": "^4.3.1",
    "ajv": "^6.6.2",
    "awesome-typescript-loader": "^5.2.1",
    "css-loader": "^1.0.1",
    "electron": "^3.1.0",
    "file-loader": "^2.0.0",
    "html-webpack-plugin": "^3.2.0",
    "mocha": "^5.2.0",
    "rimraf": "^2.6.3",
    "source-map-loader": "^0.2.4",
    "spectron": "^5.0.0",
    "ts-loader": "^5.3.3",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.7.0",
    "tslint": "^5.12.0",
    "tslint-microsoft-contrib": "^5.2.1",
    "typescript": "^3.2.2",
    "webpack": "^4.28.1",
    "webpack-cli": "^3.2.1",
    "webpack-merge": "^4.2.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Devtography/electron-react-typescript-webpack-boilerplate"
  },
  "keywords": [
    "boilerplate",
    "Electron",
    "React",
    "Typescript",
    "Webpack"
  ],
  "bugs": {
    "url": "https://github.com/Devtography/electron-react-typescript-webpack-boilerplate/issues"
  },
  "homepage": "https://github.com/Devtography/electron-react-typescript-webpack-boilerplate#readme"
}
